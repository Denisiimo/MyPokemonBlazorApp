@page "/Info/{id:int}"
@inject DatabaseContext DbContext

<h3>Info</h3>
@if (pokemon is not null)
{
    <div class="card card-body bg-light">
        <h1>@pokemon?.Name</h1>
        <div class="d-flex">
            <div class="p-1">
                @if (pokemon.Type == "Grass")
                {
                    <span class="badge text-bg-success">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Fire")
                {
                    <span class="badge text-bg-danger">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Water")
                {
                    <span class="badge text-bg-primary">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Bug")
                {
                    <span class="badge text-bg-success">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Normal")
                {
                    <span class="badge text-bg-light">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Poison")
                {
                    <span class="badge text-bg-success">@pokemon.Type</span>
                }
                else if (pokemon.Type == "Electric")
                {
                    <span class="badge text-bg-primary">@pokemon.Type</span>
                }
            </div>

            <div class="p-1">
                @if (pokemon.Legendary == true)
                {
                    <span class="badge text-bg-warning">Legendary</span>
                }
                else
                {
                    <span class="badge text-bg-info">Not Legendary</span>
                }
            </div>
        </div>
        
        <div>
            <ul class="list-group">
                <div class="row g-2 mb-1">
                    <div class="col-md-2">HP:</div>
                    <div class="col-md-9">
                        <div class="progress progress-lg" style="height: 30px">
                            <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="@pokemon.HP" style="width: @(pokemon.HP*100/255)%" aria-valuemin="0" aria-valuemax="255"></div>
                        </div>
                    </div>
                    <div class="col-md-1">@pokemon.HP</div>
                </div>
                <li class="row g-2 mb-1">
                    <p class="col-md-2">HP:</p>
                    <div class="progress class=" col-md-9"" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-success" style="width: @(pokemon.HP*100/255)%"></div>
                    </div>
                    <p class="col-md-1">@pokemon.HP</p>
                </li>
                <li class="list-group-item d-flex">
                    <p>Attack:</p>
                    <div class="progress" role="progressbar" aria-label="Info example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-info" style="width: @(pokemon.Attack*100/255)%"></div>
                    </div>
                    <p>@pokemon.Attack</p>
                </li>
                <li class="list-group-item d-flex">
                    <p>Defence:</p>
                    <div class="progress" role="progressbar" aria-label="Warning example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-warning" style="width: @(pokemon.Defence*100/255)%"></div>
                    </div>
                    <p>@pokemon.Defence</p>
                </li>
                <li class="list-group-item d-flex">
                    <p>Speed:</p>
                    <div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-danger" style="width: @(pokemon.Speed*100/255)%"></div>
                    </div>
                    <p>@pokemon.Speed</p>
                </li>
                <li class="list-group-item d-flex">
                    <p>Total:</p>
                    <div class="progress" role="progressbar" aria-label="Danger example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar bg-" style="width: @(pokemon.Total*100/800)%"></div>
                    </div>
                    <p>@pokemon.Total</p>
                </li>
            </ul>
        </div>
    </div>
    
}
else
{
    <p>No pokemon found for Id @Id</p>
}
@code {
    [Parameter]
    public int Id { get; set; }
    private Pokemon? pokemon;

    protected override void OnInitialized()
    {
        pokemon = DbContext.Pokemons.SingleOrDefault(p => p.Id == Id);
    }
}
